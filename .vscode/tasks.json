{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start CosmosDB Emulator",
      "type": "shell",
      "command": "sudo",
      "args": [
        "docker",
        "compose",
        "up",
        "-d",
        "cosmos-db-emulator"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "group": "develop"
      },
      "detail": "Start CosmosDB Emulator in Docker container"
    },
    {
      "label": "Initialize CosmosDB Containers",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": [
        "-m",
        "app.utils.init_cosmos_db"
      ],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "group": "develop"
      },
      "detail": "Initialize CosmosDB containers for development",
      "dependsOn": ["Start CosmosDB Emulator"]
    },
    {
      "label": "Start Frontend Dev Server",
      "type": "npm",
      "script": "start",
      "path": "frontend/",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "develop"
      },
      "detail": "Start React development server"
    },
    {
      "label": "Build Frontend",
      "type": "npm",
      "script": "build",
      "path": "frontend/",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "detail": "Build React app for production"
    },
    {
      "label": "Test Frontend",
      "type": "npm",
      "script": "test",
      "path": "frontend/",
      "problemMatcher": [],
      "detail": "Run React tests"
    },
    {
      "label": "Start Backend Dev Server",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": [
        "-m",
        "uvicorn",
        "app.main:app",
        "--reload",
        "--host",
        "localhost",
        "--port",
        "8000"
      ],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "develop"
      },
      "detail": "Start FastAPI development server with hot reload"
    },
    {
      "label": "Install Frontend Dependencies",
      "type": "npm",
      "script": "install",
      "path": "frontend/",
      "problemMatcher": [],
      "detail": "Install frontend dependencies"
    },
    {
      "label": "Install Backend Dependencies",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": [
        "-m",
        "pip",
        "install",
        "-r",
        "requirements.txt"
      ],
      "options": {
        "cwd": "${workspaceFolder}/foodpal/backend"
      },
      "problemMatcher": [],
      "detail": "Install backend dependencies from requirements.txt"
    },
    {
      "label": "Start Full Stack Dev Environment",
      "dependsOn": [
        "Initialize CosmosDB Containers",
        "Start Backend Dev Server",
        "Start Frontend Dev Server"
      ],
      "problemMatcher": [],
      "detail": "Start CosmosDB emulator, backend and frontend development servers"
    }
  ]
}
